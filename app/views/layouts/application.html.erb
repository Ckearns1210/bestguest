<!DOCTYPE html>
<html>
<head>
  <title>BestGuest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if logged_in? %>
  <h1>Welcome Back</h1>
  <%= link_to "#{User.find(session[:current_user_id]).username}'s Profile", user_path(session[:current_user_id]) %> ||
  <%= link_to "Logout", '/logout' %>
  <% else %>
  <%= link_to 'Login', 'login' %> | <%= link_to 'Signup', '/signup' %>
  <% end %>

<%= yield %>

</body>
</html>
