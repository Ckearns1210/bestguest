<div class="container new-party">
  <h1 class="text-primary text-center event-text">Create an Event</h1>
  <div class="row">
    <%= form_for @party, :html => {:class => "col s12"} do |f| %>
    <div class="row">
      <div class="input-field col s6">
        <%= f.label :name %>
        <%= f.text_field :name, :class => 'validate'%>
      </div>
      <div class="input-field col s6">
        <%= f.label :location%>
        <%= f.text_field :location, :class => 'validate' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.label :date%>
        <%= f.date_field :date, :class => 'datepicker' %>
      </div>
      <div class="input-field col s6">
        <%= f.label :time%>
        <%= f.time_field :time, :class => 'validate' %>
      </div>
    </div>
    <%= f.submit "Create Event", class: "btn waves-effect waves-light" %>
    <% end %>
  </div>
</div>
