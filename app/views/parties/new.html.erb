<%= render partial: 'layouts/nav'%>
<div class="container new-party">
  <h1 class="text-primary text-center create-event-text">Create an Event</h1>
  <div class="row">
    <%= form_for @party, :html => {:class => "col s12"} do |f| %>
    <div class="row">
      <div class="input-field col s6">
        <%= f.label :name %>
        <%= f.text_field :name, :class => 'validate'%>
      </div>
      <div class="input-field col s6">
        <%= f.label :address%>
        <%= f.text_field :address, :class => 'validate' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.label :date%>
        <%= f.date_field :date, :class => 'datepicker' %>
      </div>
      <div class="input-field col s6">
        <%= f.label :time, :class => 'active' %>
        <%= f.time_field :time, :class => 'validate'%>
      </div>
    </div>
    <%= f.submit "Create Event", class: "btn waves-effect waves-light" %>
    <% end %>
  </div>
</div>
