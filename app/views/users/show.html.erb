<div class="user-page container">
  <div class="container">
    <h1 class = "text-center"><%= @user.name.capitalize.split(" ")[0]%>'s Events</h1>
    <%if current_user.parties == [] %>
    <h1 class = "text-primary text-center">You have no upcoming events.  Why don't you throw one?</h1>
    <%end %>
  </div>
<% @user.parties.each do |party| %>
<div class = "container">
  <div class="row">
     <div class="col s3">
       <div class="card blue-grey lighten-5">
         <div class="card-content black-text">

           <span class="card-title"><%= link_to "#{party.name.split.map(&:capitalize).join(' ')}", party_path(party)%></span>
         </div>

         <div class="card-action white-text">
           <% @items.each do |item| %>
           <% if item.user_id ==  session[:user_id] &&  item.img_url.to_i == party.id %>
                 <p>
                   You are bringing <%= item.name %>
                 </p>
              <%end %>
            <% end %>
          </div>
         </div>
       </div>
     </div>
   </div>
  <% end %>
</div>
<div class="container">


<div class= "container profile-links"
<ul>
  <li> <%= link_to "Start a Party!?", new_party_path, :class => "btn btn-primary btn-block text-center" %></li>
  <li>
    <%= link_to 'Delete Account',url_for(action: :destroy,id: @user.id),method: :delete, :class => "btn btn-primary btn-block", data: {confirm: "Are you sure you want to delete your account??"} %>
  </li>
</ul>
</div>
