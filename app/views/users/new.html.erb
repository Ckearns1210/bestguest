<div class="container">
<h1 class = "text-primary text-center event-text">Sign Up</h1>
<%= form_for @user, :html => {:class => "form-group"} do |f| %>
<%= f.label :name, :class => 'form-control one'%><br>
<%= f.text_field :name, :class => 'form-control'%><br>
<%= f.label :email, :class => 'form-control one'%><br>
<%= f.text_field :email, :class => 'form-control'%><br>
<%= f.label :username, :class => 'form-control one'%><br>
<%= f.text_field :username, :class => 'form-control'%><br>
<%= f.label :password, :class => 'form-control one' %><br>
<%= f.password_field :password, :class => 'form-control'%><br>
<%= f.label :password_confirmation, :class => 'form-control one'%><br>
<%= f.password_field :password_confirmation, :class => 'form-control'%><br>
<br>
<%= f.submit "Sign Up", class: "btn btn-primary btn-block"%>
<%end %>
</div>
