<div class="container">
<h1 class = "text-primary">Login</h1>
<%= form_tag '/login', :class => 'form-group' do %>
<div class= "form-headers">Username:</div> <%= text_field_tag :username, "", class: 'form-control' %>
<div class = "form-headers">Password:</div> <%= password_field_tag :password, "", class: 'form-control'%>
<%= submit_tag "Submit", class: "btn btn-default"%>
<% end %>
</div>
